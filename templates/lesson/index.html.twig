{% extends 'oragePage.html.twig' %}
{% block title %}Cours disponibles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/palette.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/lesson.css') }}">
    <script defer src="{{ asset('JS/cours.js') }}"></script>
    <style>

    </style>
{% endblock %}
{% block body %}
    {% include "component/navbar.html.twig" %}
    <div class="navbody">
        {% include "component/flashRenderer.html.twig" %}
    </div>
    <div class="container-wrapper">
        <!-- Banni√®re du catalogue -->
        {% set banner_title = "Catalogue des <span class='hero-highlight'>Cours</span>" %}
        {% set banner_description = '<p class="hero-subtitle">D√©couvrez notre collection de cours organis√©s par mati√®re et par niveau</p>' %}
        {% include "component/banner.html.twig" %}

        <div class="main-content">
            <div class="layout-grid">
                <!-- Menu d'arborescence -->
                <aside class="tree-container">
                    <div class="tree-title d-flex flex-column">
                        <h3 class="d-flex">
                            <span class="tree-icon">üìö</span>
                            <span>Parcourir les cours</span>
                        </h3>
                        <div class="tree-search">
                            <div class="tree-search-input">
                                <input id='search-input' type="search" name="q" placeholder="Recherche">
                            </div>
                            <button id="search-button" class="search-btn" type="submit">Rechercher</button>
                        </div>
                    </div>


                    <div class="tree-content">
                        {% for niveau in levels %}
                            <div class="tree-node">
                                <!-- Cat√©gorie avec toggle -->

                                <div class="tree-toggle" data-niveau="{{ niveau.nomNiveau }}">
                                    <span class="tree-toggle-text">{{ niveau.nomNiveau }}</span>
                                    <span class="tree-toggle-arrow">‚ñ∏</span>
                                </div>

                                <div class="tree-children">
                                    {% for category in matiere %}
                                        {% if niveau %}
                                            {% set id = category.id %}
                                            {% set amount = niveau.countOfLesson(id)  %}
                                        {% else %}
                                            {% set id =0 %}
                                        {% endif %}
                                        {% if amount >0 %}
                                            <!-- Niveau de cours -->
                                            <div class="tree-item tree-niveau"
                                                 data-categorie="{{ category.libele }}"
                                                 data-niveau="{{ niveau.nomNiveau }}">
                                            <span
                                                class="tree-item-text tree-item-{{ category.libele }}">{{ category.libele }}</span>

                                                <span class="tree-item-count">(

                                                {{ amount }}
                                                )</span>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </aside>
                <!-- Section principale des cours -->
                <section class="courses-section">
                    <div class="section-header">
                        <h2 class="section-title">Cours disponibles</h2>
                        <div class="results-info">
                            <span class="results-count" id="resultsCount">
                                <strong>{{ cours|length }}</strong> cours trouv√©s
                            </span>
                        </div>
                    </div>

                    <!-- Barre de filtre actif -->
                    <div class="filter-bar" id="filterBar" style="display: none;">
                        <div class="filter-content">
                            <span class="filter-label">Filtre actif :</span>
                            <span class="filter-text" id="filterText"></span>
                            <button class="btn-clear-filter" id="clearFilterBtn">
                                <span>‚úï</span> Effacer le filtre
                            </button>
                        </div>
                    </div>

                    <!-- Message vide -->
                    <div class="empty-state" id="emptyState" style="display: {% if cours|length ==0 %}block{% else %} none{% endif %};">
                        <div class="empty-icon">üîç</div>
                        <p class="empty-message">Aucun cours trouv√© avec les crit√®res s√©lectionn√©s</p>
                        <a class="btn btn-secondary hero-button" id="showAllCoursesBtn" href={{ url('lessons') }}  >Voir tous les cours</a>
                    </div>

                    <!-- Grille des cours -->
                    <div class="courses-grid" id="coursesGrid">
                        {% for lesson in cours %}
                            <article class="course-card"
                                     data-course-id="{{ lesson.id }}"
                                     data-category="{{ lesson.categorie.libele }}"
                                     data-name ="{{ lesson.nomCours }}"
                                     data-niveau="{{ lesson.niveau.nomNiveau }}">
                                <div class="course-card-header">
                                    <h3 class="course-card-title">{{ lesson.nomCours }}</h3>
                                    <p class="course-card-subtitle">{{ lesson.getNiveau().getNomNiveau() }}</p>
                                </div>
                                <div class="course-card-body">
                                    <div class="course-badges">
                                                <span class="course-badge badge-categorie"
                                                      style="background: {{ lesson.categorie.color }}99">
                                                    {{ lesson.getCategorie().getLibele() }}
                                                </span>
                                        <span class="course-badge badge-niveau">
                                                    {{ lesson.getNiveau().getNomNiveau() }}
                                                </span>
                                    </div>

                                    <p class="course-description">
                                        Ce cours vous initie aux concepts fondamentaux de {{ lesson.nomCours }}.
                                        Explorez les notions essentielles et d√©veloppez vos comp√©tences.
                                    </p>

                                    <div class="course-actions">

                                        <a class="btn btn-primary btn-course"
                                           href={{ url('lesson_show',{'id' : lesson.id}) }}>
                                            <span class="btn-icon"></span>
                                            Voir le cours
                                        </a>
                                    </div>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </section>
            </div>
        </div>
    </div>
    {% include "component/footer.html.twig" %}
{% endblock %}
