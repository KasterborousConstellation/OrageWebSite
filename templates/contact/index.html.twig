{% extends 'pageWnavbar.html.twig' %}

{% block title %}Contact{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href={{ asset("styles/contact.css") }}>
{% endblock %}

{% block navbody %}
<div class = "headtitle">
    <h1>Contactez-nous</h1>
    <p>Questions ou suggestions, nous sommes disponible toute la semaine. </p>
</div>
<div class ="etiquette-container">
<div class="etiquette">
    <a class ="reset-a" href={{ url("contact.faq") }}>
        <img class ="etiquette-icon" src={{ asset("images/faq.svg") }} alt="icon">
        <h2>FAQ</h2>
        <p>Vos question ont peut être déjà leurs réponses !</p>
    </a>
</div>
<div class="etiquette">
    <a class ="reset-a" href={{ url("contact.mail") }}>
        <img class ="etiquette-icon" src={{ asset("images/envelope.svg") }} alt="icon">
        <h2>Par mail</h2>
        <p>Ecrivez nous à l'adresse mail: <br>contact@asso-orage.fr</p>
    </a>
</div>

</div>
{% endblock %}