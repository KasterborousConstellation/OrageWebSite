{% extends 'pageWnavbar.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/contact.css') }}"/>
{% endblock %}
{% block title "Contact Mail" %}
{% block navbody %}
	<div class="headbody">
		{% include 'component/backlink.html.twig' %}
		<div class="contactform">
      <div class ="contactform-header">
        <img class ="contactform-icon" src="{{ asset('images/envelope.svg') }}" alt="Contact Mail Icon" />
        <h1>Contactez-nous par mail</h1>
        <p>Orage s'engage à vous répondre dans les plus brefs délais !</p>
      </div>
			
			{{ form_start(form) }}
			<div class="form-rows">
				{{ form_row(form.name) }}
				{{ form_row(form.email) }}
			</div>
			<div class="form-area">
				{{ form_row(form.message) }}
			</div>

			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
