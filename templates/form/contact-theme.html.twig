{# templates/form/custom_theme.html.twig #}
{% block form_row %}
	<div class="form-group">
		{{ form_label(form) }}
		{{ form_widget(form) }}
		{# Completely remove form_errors(form) to suppress field-level errors #}
	</div>
{% endblock %}
{% block form_errors %}
	{% set errors = form.vars.errors %}
    
    {# Only show errors at form level #}
	{% if errors|length > 0 %}
		<div class ="form-errors">
			<ul class="flash-error-container">
                {# Loop through each error and display it #}
                {% for error in errors %}
                    <li class ="flash-error">{{ error.message }}</li>
                {% endfor %}
			</ul>
		</div>
	{% endif %}
{% endblock %}
